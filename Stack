#include <iostream>
#define MAX 5  // Maximum size of stack
using namespace std;

class Stack {
private:
    int arr[MAX];
    int top;

public:
    Stack() { top = -1; }

    // Push function
    void push(int value) {
        if (top == MAX - 1) {
            cout << "Stack Overflow! Cannot push " << value << endl;
        } else {
            arr[++top] = value;
            cout << value << " pushed to stack" << endl;
        }
    }

    // Pop function
    void pop() {
        if (top == -1) {
            cout << "Stack Underflow! No elements to pop" << endl;
        } else {
            cout << arr[top--] << " popped from stack" << endl;
        }
    }

    // Display function
    void display() {
        if (top == -1) {
            cout << "Stack is empty" << endl;
        } else {
            cout << "Stack elements: ";
            for (int i = top; i >= 0; i--)
                cout << arr[i] << " ";
            cout << endl;
        }
    }
};

int main() {
    Stack s;
    s.push(10);
    s.push(20);
    s.push(30);
    s.display();
    s.pop();
    s.display();

    return 0;
}
